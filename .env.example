FLASK_ENV=development
PORT=5000

# GitHub webhook secret (recommended)
GITHUB_WEBHOOK_SECRET=your_webhook_secret
# Local testing only. Set true to skip signature checks.
ALLOW_UNSIGNED_WEBHOOKS=false
# GitHub token (recommended for private repos / higher rate limits)
GITHUB_TOKEN=your_github_token

# DeepSeek API
DEEPSEEK_API_KEY=your_deepseek_api_key
DEEPSEEK_API_BASE=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# Confluence
ENABLE_CONFLUENCE=true
CONFLUENCE_BASE_URL=https://pratikfnu.atlassian.net/wiki
CONFLUENCE_EMAIL=pratikfnu@gmail.com
CONFLUENCE_API_TOKEN=your_confluence_api_token
CONFLUENCE_SPACE_KEY=SD
CONFLUENCE_PARENT_PAGE_ID=
